<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/areaLayout">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp" app:cardElevation="4dp"
            android:id="@+id/areaInfoCard" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="8dp">

            <TextView
                    android:id="@+id/areaInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Info"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Run Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/areaRunCount"
                    app:layout_constraintTop_toBottomOf="@+id/areaInfo" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Lift Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/areaLiftCount"
                    app:layout_constraintTop_toBottomOf="@+id/areaRunCount"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Opening Year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/areaOpeningYear"
                    app:layout_constraintTop_toBottomOf="@+id/areaLiftCount"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/areaWebsite"
                    app:layout_constraintTop_toBottomOf="@+id/areaOpeningYear"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/areaInfoCard"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            android:id="@+id/mapListRecycler"/>
    <FrameLayout
            android:id="@+id/mapViewHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>